@page "/drugs"
@inject IController controller
@inject IModel model




<h5>Text to search:</h5>

<input name="searchText" class="text-box single-line" @bind="model.SearchText" style="width: 200px" />
<button name="searchButtonforDrugs" class="btn btn-secondary" @onclick="controller.GetDrugsAsync">Search</button>


<h5 style="margin: 4px 0px 4px 0px">Drugs</h5>
<div class="col-xl-6" style="height: 340px">
  @foreach( DrugData drugData in model.DrugsList )
  {
    <div class="row">
      <button class="btn btn-">@drugData.id</button>
      <button class="btn btn-">@drugData.name</button>
      <button class="btn btn-">@drugData.numberOfPills</button>
      <button class="btn btn-">@drugData.price</button>
      <button class="btn btn-">@drugData.quantity</button>
    </div>
  }
</div>

 



<div class="col-xl-6" style="margin-top: 24px; width: 240px; justify-content: right">
  <a href="https://zsut.tele.pw.edu.pl/" target="_blank">ZSUT IT PW home page</a>
</div>

