@page "/list_radzen"
@inject IController controller
@inject IModel model

<h5>Text to search:</h5>

<RadzenTextBox Name="searchText" @bind-Value=@model.SearchText Style="width: 160px" />

<RadzenButton Icon="search" Text="Search" Click=@controller.SearchPrescriptionsAsync Style="width: 160px" />

<h5 style="margin-top: 16px">Nodes</h5>

<RadzenListBox Name="prescriptionList" Data=@model.PrescriptionList TValue="PrescriptionData" SelectedItem=@model.SelectedPrescription Style="width: 324px; height: 240px">
  <Template Context="prescriptionData">
    @prescriptionData.Id at (@prescriptionData.DoctorDetails,@prescriptionData.PatientDetails)
  </Template>
</RadzenListBox>

<RadzenMenu>
  <RadzenMenuItem Text="Add" Icon="add" />
  <RadzenMenuItem Text="View" Icon="pageview" />
  <RadzenMenuItem Text="Edit" Icon="edit" />
</RadzenMenu>

<div style="margin-top: 12px; width: 324px; text-align: center">
  <RadzenLink Text="ZSUT IT PW home page" Path="https://zsut.tele.pw.edu.pl/" Target="_blank" />
</div>
